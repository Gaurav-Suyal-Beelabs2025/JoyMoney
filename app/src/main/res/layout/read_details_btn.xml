<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_details"
        android:paddingBottom="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/readetails_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/processing_fee_2"
            android:textColor="#686868"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/readetails_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="#EDEDED"
            app:layout_constraintTop_toBottomOf="@+id/readetails_txt1" />


        <TextView
            android:id="@+id/readetails_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/rate_of_intrest_0_1_per_day"
            android:textColor="#686868"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/readetails_view1" />


        <View
            android:id="@+id/readetails_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="#EDEDED"
            app:layout_constraintTop_toBottomOf="@+id/readetails_txt2" />


        <TextView
            android:id="@+id/readetails_txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/repayment_date_15_days_from_disbursal_date"
            android:textColor="#686868"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/readetails_view2" />


        <View
            android:id="@+id/readetails_view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="#EDEDED"
            app:layout_constraintTop_toBottomOf="@+id/readetails_txt3"
            tools:layout_editor_absoluteX="-101dp" />

        <TextView
            android:id="@+id/readetails_txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/disbursement_amount_rs_4900"
            android:textColor="#686868"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/readetails_view3" />

        <View
            android:id="@+id/readetails_view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="#EDEDED"
            app:layout_constraintTop_toBottomOf="@+id/readetails_txt4" />


        <TextView
            android:id="@+id/readetails_txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/bounce_charges_rs_150"
            android:textColor="#686868"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/readetails_view4" />

        <View
            android:id="@+id/readetails_view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="#EDEDED"
            app:layout_constraintTop_toBottomOf="@+id/readetails_txt5" />


        <TextView
            android:id="@+id/readetails_txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="@string/per_day_late_fee_rs_15"
            android:textColor="#686868"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/readetails_view5" />

        <View
            android:id="@+id/readetails_view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="#EDEDED"
            app:layout_constraintTop_toBottomOf="@+id/readetails_txt6" />


        <TextView
            android:id="@+id/readetails_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/drawable_details"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/nunito_sans_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_13sdp"
            android:text="@string/dismiss"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/readetails_view6" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>