<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".BussnessDetailsUntick">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/frame"/>

            <TextView
                android:id="@+id/bussness_details_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/zilla_slab_bold"
                android:text="Business Details"
                android:textColor="@color/black"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="@id/back_image"
                app:layout_constraintTop_toBottomOf="@id/back_image" />
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/bussness_details_txt"
                app:layout_constraintTop_toBottomOf="@id/bussness_details_txt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/checkbox"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="@id/checkbox"
                app:layout_constraintStart_toEndOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/checkbox"
                android:text="Do you have GST Number?"/>
            <EditText
                android:id="@+id/gst_edit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/checkbox"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:hint="GST No."
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/propriter_edit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/gst_edit"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:drawableEnd="@drawable/keyboard_arrow_down_black_24dp_3"
                android:hint="Propritor/ Pvt. Ltd./ LLP"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/busssness_name_edit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/propriter_edit"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:hint="Business Name"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/busssness_pan_edit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/busssness_name_edit"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:hint="Business PAN"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/nature_address_edit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/busssness_pan_edit"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:hint="Business Address"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />


            <EditText
                android:id="@+id/monthly_profit_edit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/nature_address_edit"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:hint="Nature of Business"
                android:padding="10dp"
                android:drawableEnd="@drawable/keyboard_arrow_down_black_24dp_3"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/monthly_profit_edit1"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/monthly_profit_edit"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:hint="Monthly Profit"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/shop_type_edit1"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@id/monthly_profit_edit1"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:hint="Shop Type"
                android:padding="10dp"
                android:drawableEnd="@drawable/keyboard_arrow_down_black_24dp_3"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                android:paddingStart="18dp"
                android:background="@drawable/border"
                android:singleLine="true"
                android:textColor="#909090"
                android:textSize="14sp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:textAlignment="center"
                android:background="@drawable/button_draw"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Skip"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/_50sdp"
                app:layout_constraintTop_toBottomOf="@id/shop_type_edit1"
                app:layout_constraintEnd_toEndOf="@+id/shop_type_edit1"
                app:layout_constraintStart_toStartOf="@+id/shop_type_edit1" />
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>