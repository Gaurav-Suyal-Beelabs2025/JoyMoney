<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pick_Up_Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/img_arrowback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/order_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_up"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintStart_toEndOf="@id/img_arrowback"
                app:layout_constraintTop_toTopOf="@id/img_arrowback"
                app:layout_constraintBottom_toBottomOf="@id/img_arrowback" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/layout_include"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_default_pick_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_pickup_drawable"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/view">


             <TextView
                 android:id="@+id/txt_default_pick_up"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/default_pick_up"
                 android:textColor="@color/black"
                 android:textAllCaps="false"
                 android:textFontWeight="600"
                 android:textSize="16sp"
                 android:fontFamily="@font/inter_semibold"
                 android:layout_marginTop="@dimen/_7sdp"
                 android:layout_marginStart="@dimen/_11sdp"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"/>

             <LinearLayout
                 android:id="@+id/layout_map"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:paddingHorizontal="@dimen/_8sdp"
                 android:paddingVertical="@dimen/_3sdp"
                 android:backgroundTint="#FA713F"
                 android:layout_marginEnd="@dimen/_9sdp"
                 android:background="@drawable/button_bacground"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="@id/txt_default_pick_up"
                 app:layout_constraintTop_toTopOf="@id/txt_default_pick_up">

                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:src="@drawable/location_white"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Map"
                     android:textSize="10sp"
                     android:textFontWeight="500"
                     android:layout_marginStart="@dimen/_5sdp"
                     android:textAllCaps="false"
                     android:textColor="@color/white"
                     android:fontFamily="@font/inter_medium"/>

             </LinearLayout>


            <TextView
                android:id="@+id/txt_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sd_138b_ahinsa_khand_1_jaipuria_service_road_indirapuram_ghaziabad"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@id/layout_map"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_default_pick_up"
                app:layout_constraintStart_toStartOf="@id/txt_default_pick_up"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/txt_previously_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previously_saved_addresses"
            android:textSize="16sp"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginTop="@dimen/_19sdp"
            app:layout_constraintTop_toBottomOf="@id/layout_default_pick_up"
            app:layout_constraintStart_toStartOf="@id/layout_default_pick_up"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pickup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/itam_list"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/layout_add_new_address"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/txt_previously_saved"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_add_new_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent">


           <TextView
               android:id="@+id/txt_add_new_address"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/add_new_address"
               android:textColor="#0F6FB5"
               android:textAllCaps="false"
               android:textFontWeight="500"
               android:textSize="16sp"
               android:gravity="center"
               android:paddingVertical="@dimen/_10sdp"
               android:layout_marginVertical="@dimen/_10sdp"
               android:layout_marginHorizontal="@dimen/_15sdp"
               android:fontFamily="@font/inter_medium"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:background="@drawable/default_pickup_drawable"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>