<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/percentage_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/parcentageimg"
            android:layout_marginTop="@dimen/_19sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/flat_rs_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="Flat Rs.30 Off on your 2-wheeler order"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/percentage_img"
            app:layout_constraintTop_toTopOf="@+id/percentage_img" />

        <ImageView
            android:id="@+id/dot...."
            android:layout_width="4dp"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/dot___b"
            app:layout_constraintBottom_toBottomOf="@+id/get_flat_textview"
            app:layout_constraintStart_toStartOf="@+id/flat_rs_textview"
            app:layout_constraintTop_toBottomOf="@+id/flat_rs_textview" />

        <TextView
            android:id="@+id/get_flat_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/inter"
            android:text="Get flat Rs.30 Off on 1st 2-wheeler order"
            android:textColor="#686868"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/flat_rs_textview"
            app:layout_constraintStart_toEndOf="@+id/dot...."
            app:layout_constraintTop_toBottomOf="@+id/flat_rs_textview" />


        <View
            android:id="@+id/view_group"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            app:layout_constraintEnd_toEndOf="@+id/get_flat_textview"
            app:layout_constraintStart_toEndOf="@+id/dot...."
            app:layout_constraintTop_toBottomOf="@+id/percentage_img" />

        <TextView
            android:id="@+id/offer_valid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/inter"
            android:text="Offer Valid Till 30th September "
            android:textColor="#000000"
            android:textSize="12sp"
            android:textFontWeight="400"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_group" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="Details"
            android:textColor="#0F6FB5"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/offer_valid_textview"
            app:layout_constraintStart_toEndOf="@+id/offer_valid_textview"
            app:layout_constraintTop_toTopOf="@+id/offer_valid_textview" />

        <TextView
            android:id="@+id/apply_white_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/apply_drawable"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_14sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/offer_valid_textview"
            app:layout_constraintEnd_toEndOf="@+id/view_group"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/offer_valid_textview" />


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>