<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SalariedFragment">


    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:fontFamily="@font/nunito"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_19sdp"
        android:hint="@string/full_name_as_per_pan"
        android:padding="10dp"
        android:paddingStart="18dp"
        android:background="@drawable/border"
        android:singleLine="true"
        android:textColor="#909090"
        android:textSize="14sp"
       />
    <EditText
        android:id="@+id/dob_edit"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:fontFamily="@font/nunito"
        android:inputType="number"
       app:layout_constraintTop_toBottomOf="@id/name_edit"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:hint="@string/date_of_birth"
        android:padding="10dp"
        android:drawableEnd="@drawable/group_33853"
        android:paddingStart="18dp"
        android:background="@drawable/border"
        android:singleLine="true"
        android:textColor="#909090"
        android:textSize="14sp"
        />
    <EditText
        android:id="@+id/personal_email_edit"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        app:layout_constraintTop_toBottomOf="@id/dob_edit"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:hint="@string/personal_email"
        android:padding="10dp"
        android:paddingStart="18dp"
        android:background="@drawable/border"
        android:singleLine="true"
        android:fontFamily="@font/nunito"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/month_salary_edit"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/border"
        android:fontFamily="@font/nunito"
        android:hint="@string/monthly_salary"
        android:padding="10dp"
        android:paddingStart="18dp"
        android:singleLine="true"
        android:textColor="#909090"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/personal_email_edit"
        tools:layout_editor_absoluteX="19dp" />

    <EditText
        android:id="@+id/address_edit"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        app:layout_constraintTop_toBottomOf="@id/month_salary_edit"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:hint="@string/address"
        android:fontFamily="@font/nunito"
        android:padding="10dp"
        android:paddingStart="18dp"
        android:background="@drawable/border"
        android:singleLine="true"
        android:textColor="#909090"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/marital_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/marital_status"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintStart_toStartOf="@+id/address_edit"
        app:layout_constraintTop_toBottomOf="@id/address_edit" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        app:layout_constraintTop_toBottomOf="@id/marital_status_txt"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:background="@drawable/custom_draw"
            android:textColor="@color/green"
            android:layout_height="wrap_content"
            android:text="@string/single" />

        <RadioButton
            android:id="@+id/radio2"
            android:button="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/nunito"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingVertical="10sp"
            android:background="@drawable/custom_draw"
            android:textColor="@color/green"
            android:text="@string/married" />

        <RadioButton
            android:id="@+id/radio3"
            android:button="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/nunito"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingVertical="10sp"
            android:background="@drawable/custom_draw"
            android:textColor="@color/green"
            android:text="@string/other" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
         android:textAlignment="center"
        android:background="@drawable/button_draw"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/allow_amp_continue"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/_90sdp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup1"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup1"
        app:layout_constraintStart_toStartOf="@+id/radioGroup1" />
</androidx.constraintlayout.widget.ConstraintLayout>
