<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/liitlegray"
    tools:context=".BusinessDetails">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/frame"/>

    <TextView
        android:id="@+id/bussness_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/zilla_slab_bold"
        android:text="@string/business_details"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@id/back_image"
        app:layout_constraintTop_toBottomOf="@id/back_image" />
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
         app:layout_constraintStart_toStartOf="@id/bussness_details_txt"
        app:layout_constraintTop_toBottomOf="@id/bussness_details_txt"/>
    <TextView
        android:id="@+id/gstnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/checkbox"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@id/checkbox"
        app:layout_constraintStart_toEndOf="@id/checkbox"
        app:layout_constraintTop_toBottomOf="@id/checkbox"
        android:text="Do you have GST Number?"/>

    <EditText
        android:id="@+id/gst_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_15sdp"
        android:fontFamily="@font/nunito"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:hint="@string/gst_no"
        app:layout_constraintTop_toBottomOf="@id/gstnumber"
        app:layout_constraintStart_toStartOf="@id/checkbox"
        android:paddingStart="18dp"
        android:background="@drawable/border"
        android:singleLine="true"
        android:textSize="14sp"
        />

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:paddingVertical="@dimen/_15sdp"
               android:drawableBottom="@drawable/keyboard_arrow_down_black_24dp_3"
                android:gravity="center_vertical"
                android:hint="Propritor/ Pvt. Ltd./ LLP"
                android:paddingHorizontal="@dimen/_15sdp"
                android:textSize="14sp"
                app:spinner_item_height="55dp"
                app:layout_constraintEnd_toEndOf="@+id/gst_edit"
                app:layout_constraintStart_toStartOf="@+id/gst_edit"
                app:layout_constraintTop_toBottomOf="@id/gst_edit"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_divider_color="@color/white"
                app:spinner_divider_show="true"
                app:spinner_item_array="@array/programming_languages"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@color/white" />


            <EditText
                android:id="@+id/busssness_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/border"
                android:fontFamily="@font/nunito"
                android:hint="Business Name"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingStart="18dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/spinner_view1"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/spinner_view1" />

            <EditText
                android:id="@+id/busssness_pan_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/border"
                android:fontFamily="@font/nunito"
                android:hint="Business PAN"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingStart="18dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/busssness_name_edit"
                app:layout_constraintStart_toStartOf="@+id/busssness_name_edit"
                app:layout_constraintTop_toBottomOf="@id/busssness_name_edit" />

            <EditText
                android:id="@+id/nature_address_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/border"
                android:fontFamily="@font/nunito"
                android:hint="Business Address"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingStart="18dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/busssness_pan_edit"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/busssness_pan_edit" />


            <EditText
                android:id="@+id/monthly_profit_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/keyboard_arrow_down_black_24dp_3"
                android:fontFamily="@font/nunito"
                android:hint="Nature of Business"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingStart="18dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/nature_address_edit"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/nature_address_edit" />

            <EditText
                android:id="@+id/monthly_profit_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/border"
                android:fontFamily="@font/nunito"
                android:hint="Monthly Profit"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingStart="18dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/monthly_profit_edit"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/monthly_profit_edit" />

            <EditText
                android:id="@+id/shop_type_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/keyboard_arrow_down_black_24dp_3"
                android:fontFamily="@font/nunito"
                android:hint="Shop Type"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingStart="18dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/monthly_profit_edit1"
                app:layout_constraintStart_toStartOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/monthly_profit_edit1" />



        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:textAlignment="center"
        android:background="@drawable/button_draw"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Verify &amp; Submit"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/shop_type_edit1"
        app:layout_constraintEnd_toEndOf="@+id/shop_type_edit1"
        app:layout_constraintStart_toStartOf="@+id/shop_type_edit1" />
        />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>